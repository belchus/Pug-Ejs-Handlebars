extends layout/main.pug

block datos 

    style.
     

        table {
            padding: 20px;
            min-width: 1000px;
            margin-bottom: 30px;
            background-color: #a26faf;
            text-align: center;
            justify-content: center;
        }

        thead {
            color: black;
          background-color: #a26faf;
        }

        th {
            padding: 10px;
            font-size: 20px;
        }

        td {
           background-color : #694577;
        }
          h2 {
           padding: 20px;
           font-size: 40px;
           color:white;
         }
        .thumbnail {
            padding: 20px;
        }
        .link{
           background-color: #a26faf;
            font-size: 20px;
            border-radius:20px;
            padding:10px;
            
        }

    h2='Listado de productos'

    if productsQty
        table
            thead
                tr
                    th='Title'
                    th='Price'
                    th='Thumbnail'
            tbody
                each product in allProducts
                    tr
                        td=product.title
                        td=product.price
                        td
                            img(class='thumbnail' src=product.thumbnail alt='imagenes' width="30px")
    else
        p(class='link')='No hay productos para mostrar'
    a(class='link' href="/")='Cargar mas productos'